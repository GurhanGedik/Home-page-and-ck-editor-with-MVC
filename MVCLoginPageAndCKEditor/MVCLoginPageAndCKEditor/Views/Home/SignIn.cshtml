
@{
    ViewBag.Title = "SignIn";
    Layout = "~/Views/Shared/_Homepage.cshtml";
}
@using MVCLoginPageAndCKEditor.Models.VM;
@model LoginVM

<section class="body-sign tm-box appear-animation" data-appear-animation="fadeInRight" data-appear-animation-delay="50">
    <div class="center-sign">

        <div class="panel card-sign">
            <div class="card-title-sign mt-3 text-right">
                <h2 class="title text-uppercase font-weight-bold m-0 bg-success"><i class="fas fa-user mr-1"></i> Sign In</h2>
            </div>
            <div class="card-body">
                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group mb-3">
                        <label>Email</label>
                        <div class="input-group">
                            @Html.TextBoxFor(x => x.Email, new { @placeholder = "Please enter your Email", @class = "form-control form-control-lg" })
                            <span class="input-group-append">
                                <span class="input-group-text">
                                    <i class="fas fa-user"></i>
                                </span>
                            </span>
                        </div>
                    </div>

                    <div class="form-group mb-3">
                        <div class="clearfix">
                            <label class="float-left">Password</label>
                        </div>
                        <div class="input-group">
                            @Html.PasswordFor(x=>x.Password,new { @placeholder = "Please enter your password", @class = "form-control form-control-lg" })
                            <span class="input-group-append">
                                <span class="input-group-text">
                                    <i class="fas fa-lock"></i>
                                </span>
                            </span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-8">
                            @Html.ValidationMessageFor(x => x.Email)
                            @Html.ValidationMessageFor(x => x.Password)
                            @ViewBag.Massage
                        </div>
                        <div class="col-sm-4 text-right">
                            <button type="submit" class="btn btn-success mt-2">Sign In</button>
                        </div>
                    </div>
                }
                <hr class="mt-3 mb-3 line text-center text-uppercase">

                <p class="text-center">Don't have an account yet? <a href="/Home/SignUp" class="text-success">Sign Up!</a></p>

            </div>
        </div>

        <p class="text-center text-muted mt-3 mb-3">&copy; Copyright 2019. All Rights Reserved.</p>
    </div>
</section>
