
@{
    ViewBag.Title = "EnterBlog";
    Layout = "~/Views/Shared/_Homepage.cshtml";
}

<div class="row">
    <div class="col-lg-12">
            <section class="card">
                <header class="card-header">
                    <h2 class="card-title">
                        Enter Blog
                    </h2>
                </header>
                <div class="card-body">
                    <form class="form-horizontal form-bordered form-bordered" action="/Home/Index" method="post" role="form">
                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2" for="textareaDefault">Input</label>
                            <div class="col-lg-6">
                                <input class="form-control" data-plugin-maxlength="" maxlength="20">
                                <p>
                                    <code>max-length</code> set to 20.
                                </p>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-3 control-label text-lg-right pt-2" for="textareaDefault">Textarea</label>
                            <div class="col-lg-6">

                                @Html.TextArea("makale", new { @id = "ckeditor", @class = "ckeditor" })
                                <div class="mt-3">
                                    <button type="button" class="mb-1 mt-1 mr-1 btn btn-quaternary "><i class="fas fa-plus"></i> Add</button>
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
            </section>
    </div>
</div>

