@using MVCLoginPageAndCKEditor.Models.VM;
<!DOCTYPE html>

<html>
<head>
    <title>@ViewBag.Title</title>

    <!-- Basic -->
    <meta charset="UTF-8">
    <meta name="author" content="gurhangedik@hotmail.com">

    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />

    <!-- Web Fonts  -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800|Shadows+Into+Light" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="path/to/font-awesome/css/font-awesome.min.css">
    <!-- Vendor CSS -->
    <link rel="stylesheet" href="~/vendor/bootstrap/css/bootstrap.css" />
    <link rel="stylesheet" href="~/vendor/animate/animate.css">

    <link rel="stylesheet" href="~/vendor/font-awesome/css/fontawesome-all.min.css" />
    @*<link rel="stylesheet" href="~/vendor/magnific-popup/magnific-popup.css" />*@
    <link rel="stylesheet" href="~/vendor/bootstrap-datepicker/css/bootstrap-datepicker3.css" />

    <!-- Theme CSS -->
    <link rel="stylesheet" href="~/css/theme.css" />

    <!-- Skin CSS -->
    <link rel="stylesheet" href="~/css/skins/default.css" />

    <!-- Theme Custom CSS -->
    <link rel="stylesheet" href="~/css/custom.css">

    <!-- Head Libs -->
    <script src="~/vendor/modernizr/modernizr.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="row pt-5">
            <div class="col-sm-4 col-12">
                <div class="col-12">
                    <section class="card mb-4">
                        <div class="card-body bg-primary ">
                            <div class="widget-summary">
                                <div class="widget-summary-col widget-summary-col-icon">
                                    <div class="summary-icon">
                                        <i class="fab fa-blogger-b"></i>
                                    </div>
                                </div>
                                <div class="widget-summary-col">
                                    <div class="summary">
                                        <h4 class="title amount">Total Blog</h4>
                                        <div class="info">
                                            <p class="text-white">@ViewBag.TotalBlog</p>
                                            <p class="text-white">@ViewBag.welcome</p>
                                        </div>
                                    </div>
                                    <div class="summary-footer">
                                        <a href="/Home/Index" class="text-uppercase">Home Page</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
                <div class="col-12">
                    <section class="card mb-4">
                        <div class="card-body bg-success ">
                            <div class="widget-summary">
                                <div class="widget-summary-col widget-summary-col-icon">
                                    <div class="summary-icon">
                                        <i class="fas fa-user-plus"></i>
                                    </div>
                                </div>
                                <div class="widget-summary-col">
                                    <div class="summary">
                                        <h4 class="title amount">Sign up</h4>
                                        <div class="info">
                                            <p class="text-white">You must be a member to enter data on the <br /> blog.</p>
                                        </div>
                                    </div>
                                    <div class="summary-footer">
                                        <a href="/Home/SignUp" class="text-uppercase">Sign Up</a> /
                                        <a href="/Home/SignIn" class="text-uppercase">Sign In</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
                <div class="col-12">
                    <section class="card mb-4">
                        <div class="card-body bg-quaternary">
                            <div class="widget-summary">
                                <div class="widget-summary-col widget-summary-col-icon">
                                    <div class="summary-icon">
                                        <i class="fas fa-plus"></i>
                                    </div>
                                </div>
                                <div class="widget-summary-col">
                                    <div class="summary">
                                        <h4 class="title amount">Enter Blog</h4>
                                        <div class="info">
                                            <p class="text-white">Click the button to enter data into the blog.</p>
                                        </div>
                                    </div>
                                    <div class="summary-footer">
                                        <a href="/Home/EnterBlog/0" class="text-uppercase">Add Blog</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>
                @if (User.Identity.IsAuthenticated)
                {
                    <div class="col-12">
                        <section class="card mb-4">
                            <div class="card-body bg-secondary">
                                <div class="widget-summary">
                                    <div class="widget-summary-col widget-summary-col-icon">
                                        <div class="summary-icon">
                                            <i class="fas fa-door-open"></i>
                                        </div>
                                    </div>
                                    <div class="widget-summary-col">
                                        <div class="summary">
                                            <h4 class="title amount">Exit Blog</h4>
                                            <div class="info">
                                            </div>
                                        </div>
                                        <div class="summary-footer">
                                            <a href="/Home/LogOut" class="text-uppercase">Exit</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                }

            </div>
            <div class="col-sm-8 col-12">
                @RenderBody()
            </div>
        </div>
    </div>






    <!-- Vendor -->
    <script src="~/vendor/jquery/jquery.js"></script>
    <script src="~/vendor/jquery-browser-mobile/jquery.browser.mobile.js"></script>
    <script src="~/vendor/popper/umd/popper.min.js"></script>
    <script src="~/vendor/bootstrap/js/bootstrap.js"></script>
    <script src="~/vendor/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
    <script src="~/vendor/common/common.js"></script>
    <script src="~/vendor/nanoscroller/nanoscroller.js"></script>
    <script src="~/vendor/magnific-popup/jquery.magnific-popup.js"></script>
    <script src="~/vendor/jquery-placeholder/jquery-placeholder.js"></script>

    <!-- Specific Page Vendor -->
    <script src="~/vendor/jquery-appear/jquery-appear.js"></script>

    <!-- Theme Base, Components and Settings -->
    <script src="~/js/theme.js"></script>

    <!-- Theme Custom -->
    <script src="~/js/custom.js"></script>

    <!-- Theme Initialization Files -->
    <script src="~/js/theme.init.js"></script>

    <!-- Examples -->
    <script src="~/js/examples/examples.timeline.js"></script>
    <script src="~/ckeditor/ckeditor.js"></script>
</body>
</html>
