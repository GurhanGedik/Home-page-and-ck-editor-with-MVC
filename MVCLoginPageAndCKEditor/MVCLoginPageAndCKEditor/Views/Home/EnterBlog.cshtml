@model MVCLoginPageAndCKEditor.Models.Entities.Blogs
@{
    if (ViewBag.ControlAdd != 0)
    {
        ViewBag.Title = "Update Blog";

    }
    else
    {
        ViewBag.Title = "Enter Blog";

    }
    Layout = "~/Views/Shared/_Homepage.cshtml";
}


<div class="row">
    <div class="col-lg-12">
        <section class="card tm-box appear-animation" data-appear-animation="fadeInRight" data-appear-animation-delay="50">
            <header class="card-header">
                <h2 class="card-title">
                    @if (ViewBag.ControlAdd != 0)
                    {
                        @Html.Label("Update Blog")

                    }
                    else
                    {
                        @Html.Label("Enter Blog")

                    }

                </h2>
            </header>
            <div class="card-body">
                <form class="form-horizontal form-bordered form-bordered" action="#" method="post" role="form">
                    <div class="form-group row">
                        <label class="col-lg-2 control-label text-lg-right pt-2" for="textareaDefault">Title</label>
                        <div class="col-lg-6">
                            <input name="Title" class="form-control" data-plugin-maxlength="" maxlength="20" value="@Model.Title">
                            <p>
                                <code>max-length</code> set to 20.
                            </p>
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-lg-2 control-label text-lg-right pt-2" for="textareaDefault">Text</label>
                        <div class="col-lg-10">

                            @Html.TextArea("article", Model.Text, new { @id = "ckeditor", @class = "ckeditor" })

                            <div class="mt-3">
                                @if (ViewBag.ControlUpdate != 0)
                                {
                                    <button type="submit" @Url.Action("Home", "EnterBlog") class="mb-1 mt-1 mr-1 btn btn-quaternary "><i class="fas fa-plus"></i> Add</button>
                                }
                                @if (ViewBag.ControlAdd != 0)
                                {
                                    <button type="submit" @Url.Action("Home", "UpdateBlog") class="mb-1 mt-1 mr-1 btn btn-default "><i class="fas fa-sync"></i> Update</button>
                                }

                            </div>

                        </div>
                    </div>
                </form>
            </div>
        </section>
    </div>
</div>

