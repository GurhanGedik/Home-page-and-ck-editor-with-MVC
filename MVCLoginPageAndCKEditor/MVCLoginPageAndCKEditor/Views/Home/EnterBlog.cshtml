
@{
    ViewBag.Title = "EnterBlog";
    Layout = "~/Views/Shared/_Homepage.cshtml";
}
@model MVCLoginPageAndCKEditor.Models.Entities.Blogs

<div class="row">
    <div class="col-lg-12">
        <section class="card tm-box appear-animation" data-appear-animation="fadeInRight" data-appear-animation-delay="50">
                <header class="card-header">
                    <h2 class="card-title">
                        Enter Blog
                    </h2>
                </header>
                <div class="card-body">
                    <form class="form-horizontal form-bordered form-bordered" action="/Home/EnterBlog" method="post" role="form">
                        <div class="form-group row">
                            <label class="col-lg-2 control-label text-lg-right pt-2" for="textareaDefault">Title</label>
                            <div class="col-lg-6">
                                <input name="Title" class="form-control" data-plugin-maxlength="" maxlength="20" value="@Model.Title">
                                <p>
                                    <code>max-length</code> set to 20.
                                </p>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label class="col-lg-2 control-label text-lg-right pt-2" for="textareaDefault">Text</label>
                            <div class="col-lg-10">

                                @Html.TextArea("article", new { @id = "ckeditor", @class = "ckeditor" ,@value= @Model.Text })
                                <div class="mt-3">
                                    <button type="submit" class="mb-1 mt-1 mr-1 btn btn-quaternary "><i class="fas fa-plus"></i> Add</button>
                                </div>

                            </div>
                        </div>
                    </form>
                </div>
            </section>
    </div>
</div>

